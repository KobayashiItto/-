
<h1>広大グルメ</h1>
<h3>新規投稿</h3>



<%= form_for @posts do |f| %>
  <div class="field">
    <%= f.label :お店の名前 %>
    <%= f.text_field :title, :size => 50 %>
  </div>

  <div class="field">
  <%= f.label :詳細情報 %>
  <br>
  <%= f.text_area :about, :size => 200 %>
  </div>


  

  <div class="field">
    <%= f.label :ジャンル %>
    <%= f.select :category, 
    [["ラーメン", "ラーメン"], 
    ["和食", "和食"], 
    ["ファストフード", "ファストフード"],
    ["中華", "中華"],
    ["焼肉", "焼肉"],
    ["定食", "定食"],
    ["寿司", "寿司"],
    ["居酒屋", "居酒屋"],
    ["お好み焼き", "お好み焼き"],
    ["うどん", "うどん"],
    ["インド料理", "インド料理"],
    ["カフェ", "カフェ"],
    ["スイーツ", "スイーツ"],
    ["パン", "パン"],
    ["イタリアン", "イタリアン"],
    ], include_blank: "選択して下さい" %>

    
  </div>

  <div class="field">
  <%= f.label :URL %>
  <%= f.text_field :url, :size => 50 %>
  </div>

  <div class="field">
    <%= f.label :画像 %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.text_field :tag_ids, class: "form-control", id:'tag_ids',\
        placeholder: "タグをつける。複数つけるには','で区切ってください。" %>
  </div>

  
</div>




  <h5>総合評価</h5>
  <div class="post_form">
    <%= f.radio_button :overall, 5 ,id: 'star1'%>
    <label for="star1"><span class="text">最高</span>★</label>

    <%= f.radio_button :overall, 4 ,id: 'star2'%>
    <label for="star2"><span class="text">良い</span>★</label>

    <%= f.radio_button :overall, 3 ,id: 'star3'%>
    <label for="star3"><span class="text">普通</span>★</label>

    <%= f.radio_button :overall, 2 ,id: 'star4'%>
    <label for="star4"><span class="text">悪い</span>★</label>

    <%= f.radio_button :overall, 1 ,id: 'star5'%>
    <label for="star5"><span class="text">最悪</span>★</label>
  </div>

    
  
  

  <%= f.submit "投稿する" %>
  <% end %>
  <%= link_to "一覧", posts_path %>